<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{ resume.name }} – Resume</title>
  <style>
  {{ inline_css }}
  </style>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>
<body>
  <!-- CLASSIC LAYOUT: Traditional single-column with clear sections -->
  <header class="classic-header">
    <h1>{{ display_name or resume.name }}</h1>
    <div class="contact-line">
      {% if resume.contact.location %}{{ resume.contact.location }}{% endif %}
      {% if resume.contact.email %} • {{ resume.contact.email }}{% endif %}
      {% if resume.contact.phone %} • {{ resume.contact.phone }}{% endif %}
      {% for link in resume.contact.links %} • <a href="{{ link.url }}">{{ link.label }}</a>{% endfor %}
    </div>
    <hr class="header-line">
  </header>

  {% if use_fallback %}
  <section class="fallback-section">
    <h2>RESUME</h2>
    <div class="fallback-content">
      {% for line in raw_lines %}
        <p>{{ line }}</p>
      {% endfor %}
    </div>
  </section>
  {% endif %}

  {% if resume.summary %}
  <section class="summary-section">
    <h2>PROFESSIONAL SUMMARY</h2>
    <p class="summary-text">{{ resume.summary }}</p>
  </section>
  {% endif %}

  {% if resume.experience %}
  <section class="experience-section">
    <h2>PROFESSIONAL EXPERIENCE</h2>
    {% for role in resume.experience %}
      <div class="job-entry">
        <div class="job-header">
          <span class="job-title">{{ role.title }}</span>
          <span class="job-dates">{{ role.start }} – {{ role.end | present_if_none }}</span>
        </div>
        <div class="company-name">{{ role.company }}{% if role.location %}, {{ role.location }}{% endif %}</div>
        {% if role.bullets %}
        <ul class="achievements">
          {% for b in role.bullets %}<li>{{ b }}</li>{% endfor %}
        </ul>
        {% endif %}
      </div>
    {% endfor %}
  </section>
  {% endif %}

  <div class="bottom-sections">
    {% if resume.education %}
    <section class="education-section">
      <h2>EDUCATION</h2>
      {% for ed in resume.education %}
        <div class="education-entry">
          <div class="degree-info">
            <strong>{{ ed.degree }}</strong>
          </div>
          <div class="school-info">{{ ed.school }} • {{ ed.end }}</div>
        </div>
      {% endfor %}
    </section>
    {% endif %}

    {% if resume.skills %}
    <section class="skills-section">
      <h2>CORE COMPETENCIES</h2>
      <div class="skills-list">
        {% for s in resume.skills %}{{ s.name }}{% if not loop.last %} • {% endif %}{% endfor %}
      </div>
    </section>
    {% endif %}
  </div>
</body>
</html>


