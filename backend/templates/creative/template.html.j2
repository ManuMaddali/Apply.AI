<!DOCTYPE html>
<html lang="en" itemscope itemtype="http://schema.org/Person">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="robots" content="noindex, nofollow">
  <meta name="format-detection" content="telephone=no">
  
  <!-- PDF Generation Meta Tags -->
  <meta name="author" content="{{ display_name or resume.name or 'Resume' }}">
  <meta name="subject" content="Creative Professional Resume">
  <meta name="keywords" content="resume, cv, creative, design, {% if resume.skills %}{% for s in resume.skills %}{{ s.name }}{% if not loop.last %}, {% endif %}{% endfor %}{% endif %}">
  <meta name="creator" content="ApplyAI Resume Builder">
  
  <title>{{ display_name or resume.name or 'Creative Professional' }} ‚Äì Creative Resume</title>
  
  <style>
    {{ inline_css }}
    
    /* Print-specific CSS rules */
    @media print {
      body { 
        print-color-adjust: exact;
        -webkit-print-color-adjust: exact;
      }
      .no-print { display: none !important; }
      .page-break { page-break-before: always; }
      .avoid-break { page-break-inside: avoid; }
      .creative-container { 
        grid-template-columns: 200px 1fr;
        height: auto;
      }
      .sidebar { 
        background: var(--gradient-primary) !important;
      }
    }
    
    /* Responsive adjustments */
    @media screen and (max-width: 768px) {
      .creative-container { 
        grid-template-columns: 1fr;
        grid-template-rows: auto 1fr;
        height: auto;
      }
      .sidebar {
        padding: 16px;
      }
      .main-content {
        padding: 16px;
      }
      .skills-grid {
        justify-content: flex-start;
      }
    }
  </style>
</head>

<body itemscope itemtype="http://schema.org/Person">
  <!-- CREATIVE LAYOUT: Side panel with main content area -->
  <div class="creative-container">
    <!-- Left sidebar with personal info and skills -->
    <aside class="sidebar" role="complementary">
      <div class="profile-section">
        {% if display_name or resume.name %}
        <h1 itemprop="name" class="person-name">
          {{ display_name or resume.name }}
        </h1>
        {% endif %}
        
        {% if resume.headline %}
        <div class="profile-title" itemprop="jobTitle">
          {{ resume.headline }}
        </div>
        {% endif %}
        
        {% if resume.contact %}
        <address class="contact-info" itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
          {% if resume.contact.location %}
          <div class="contact-item">
            <span class="contact-icon" aria-hidden="true">üìç</span>
            <span itemprop="addressLocality">{{ resume.contact.location }}</span>
          </div>
          {% endif %}
          
          {% if resume.contact.email %}
          <div class="contact-item">
            <span class="contact-icon" aria-hidden="true">‚úâÔ∏è</span>
            <a href="mailto:{{ resume.contact.email }}" itemprop="email">{{ resume.contact.email }}</a>
          </div>
          {% endif %}
          
          {% if resume.contact.phone %}
          <div class="contact-item">
            <span class="contact-icon" aria-hidden="true">üìû</span>
            <a href="tel:{{ resume.contact.phone }}" itemprop="telephone">{{ resume.contact.phone }}</a>
          </div>
          {% endif %}
          
          {% if resume.contact.links %}
            {% for link in resume.contact.links %}
            <div class="contact-item">
              <span class="contact-icon" aria-hidden="true">üîó</span>
              <a href="{{ link.url }}" itemprop="url" target="_blank" rel="noopener">{{ link.label }}</a>
            </div>
            {% endfor %}
          {% endif %}
        </address>
        {% endif %}
      </div>

      {% if resume.skills and resume.skills|length > 0 %}
      <section class="skills-sidebar">
        <h2>SKILLS</h2>
        <div class="skills-container">
          {% for skill in resume.skills %}
            {% if skill.name and skill.name.strip() %}
            <span class="skill-badge" itemprop="knowsAbout">{{ skill.name }}</span>
            {% endif %}
          {% endfor %}
        </div>
      </section>
      {% endif %}

      {% if resume.education and resume.education|length > 0 %}
      <section class="education-sidebar">
        <h2>EDUCATION</h2>
        {% for education in resume.education %}
          <article class="education-item" itemprop="alumniOf" itemscope itemtype="http://schema.org/EducationalOrganization">
            {% if education.degree %}
            <div class="degree" itemprop="hasCredential">{{ education.degree }}</div>
            {% endif %}
            
            {% if education.school %}
            <div class="school" itemprop="name">{{ education.school }}</div>
            {% endif %}
            
            {% if education.end %}
            <time class="year" datetime="{{ education.end }}">{{ education.end }}</time>
            {% endif %}
          </article>
        {% endfor %}
      </section>
      {% endif %}
    </aside>

    <!-- Main content area -->
    <main class="main-content" role="main">
      {% if use_fallback %}
      <section class="fallback-creative section-card avoid-break">
        <h2 class="section-title">CREATIVE BACKGROUND</h2>
        <div class="fallback-content">
          {% if raw_lines %}
            {% for line in raw_lines %}
              {% if line.strip() %}
              <p>{{ line }}</p>
              {% endif %}
            {% endfor %}
          {% else %}
            <p>No resume content available.</p>
          {% endif %}
        </div>
      </section>
      {% endif %}

      {% if resume.summary %}
      <section class="summary-creative section-card avoid-break" itemprop="description">
        <h2 class="section-title">ABOUT ME</h2>
        <div class="summary-text">{{ resume.summary }}</div>
      </section>
      {% endif %}

      {% if resume.experience and resume.experience|length > 0 %}
      <section class="experience-creative section-card">
        <h2 class="section-title">EXPERIENCE</h2>
        {% for role in resume.experience %}
          <article class="job-creative avoid-break" itemprop="worksFor" itemscope itemtype="http://schema.org/Organization">
            {% if role.title %}
            <h3 class="job-title-creative" itemprop="jobTitle">{{ role.title }}</h3>
            {% endif %}
            
            <div class="job-header">
              {% if role.company %}
              <div class="company" itemprop="name">{{ role.company }}</div>
              {% endif %}
              
              <time class="dates">
                {% if role.start %}{{ role.start }}{% endif %}
                {% if role.start and (role.end or role.end != role.start) %} ‚Äì {% endif %}
                {% if role.end %}{{ role.end }}{% else %}Present{% endif %}
              </time>
            </div>
            
            {% if role.location %}
            <div class="job-location" itemprop="address">{{ role.location }}</div>
            {% endif %}
            
            {% if role.bullets and role.bullets|length > 0 %}
            <ul class="achievements-creative" role="list">
              {% for bullet in role.bullets %}
                {% if bullet.strip() %}
                <li>{{ bullet }}</li>
                {% endif %}
              {% endfor %}
            </ul>
            {% endif %}
          </article>
        {% endfor %}
      </section>
      {% endif %}

      {% if resume.projects and resume.projects|length > 0 %}
      <section class="projects-creative section-card">
        <h2 class="section-title">CREATIVE PROJECTS</h2>
        {% for project in resume.projects %}
          <article class="project-item avoid-break" itemprop="workExample" itemscope itemtype="http://schema.org/CreativeWork">
            {% if project.name %}
            <h3 class="project-name" itemprop="name">{{ project.name }}</h3>
            {% endif %}
            
            {% if project.description %}
            <div class="project-description" itemprop="description">{{ project.description }}</div>
            {% endif %}
            
            {% if project.bullets and project.bullets|length > 0 %}
            <ul class="project-details" role="list">
              {% for bullet in project.bullets %}
                {% if bullet.strip() %}
                <li>{{ bullet }}</li>
                {% endif %}
              {% endfor %}
            </ul>
            {% endif %}
          </article>
        {% endfor %}
      </section>
      {% endif %}
    </main>
  </div>

  <!-- Structured data for better parsing -->
  <script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "Person",
    {% if display_name or resume.name %}"name": "{{ display_name or resume.name }}",{% endif %}
    {% if resume.headline %}"jobTitle": "{{ resume.headline }}",{% endif %}
    {% if resume.contact.email %}"email": "{{ resume.contact.email }}",{% endif %}
    {% if resume.contact.phone %}"telephone": "{{ resume.contact.phone }}",{% endif %}
    {% if resume.contact.location %}"address": "{{ resume.contact.location }}",{% endif %}
    {% if resume.summary %}"description": "{{ resume.summary|replace('"', '\\"') }}",{% endif %}
    "url": [
      {% if resume.contact.links %}
        {% for link in resume.contact.links %}
          "{{ link.url }}"{% if not loop.last %},{% endif %}
        {% endfor %}
      {% endif %}
    ]
  }
  </script>
</body>
</html>





