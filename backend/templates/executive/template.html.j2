<!DOCTYPE html>
<html lang="en" itemscope itemtype="http://schema.org/Person">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="robots" content="noindex, nofollow">
  <meta name="format-detection" content="telephone=no">
  
  <!-- PDF Generation Meta Tags -->
  <meta name="author" content="{{ display_name or resume.name or 'Resume' }}">
  <meta name="subject" content="Executive Leadership Resume">
  <meta name="keywords" content="executive, leadership, resume, cv, {% if resume.skills %}{% for s in resume.skills %}{{ s.name }}{% if not loop.last %}, {% endif %}{% endfor %}{% endif %}">
  <meta name="creator" content="ApplyAI Resume Builder">
  
  <title>{{ display_name or resume.name or 'Executive Leader' }} – Executive Resume</title>
  
  <style>
    {{ inline_css }}
    
    /* Print-specific CSS rules */
    @media print {
      body { 
        print-color-adjust: exact;
        -webkit-print-color-adjust: exact;
      }
      .no-print { display: none !important; }
      .page-break { page-break-before: always; }
      .avoid-break { page-break-inside: avoid; }
      .executive-container {
        max-width: none;
      }
    }
    
    /* Responsive adjustments */
    @media screen and (max-width: 768px) {
      .executive-bottom { 
        display: block; 
      }
      .role-header { 
        flex-direction: column; 
        align-items: flex-start;
      }
      .title-company {
        flex-direction: column;
        align-items: flex-start;
      }
      .exec-dates {
        margin-top: 0.5rem;
      }
    }
  </style>
</head>

<body itemscope itemtype="http://schema.org/Person">
  <!-- EXECUTIVE LAYOUT: Formal, achievement-focused layout for senior roles -->
  <div class="executive-container">
    <!-- Executive header -->
    <header role="banner" class="executive-header">
      <div class="name-title">
        {% if display_name or resume.name %}
        <h1 itemprop="name" class="person-name">
          {{ display_name or resume.name }}
        </h1>
        {% endif %}
        
        {% if resume.headline %}
        <div class="executive-title" itemprop="jobTitle">{{ resume.headline }}</div>
        {% endif %}
      </div>
      
      {% if resume.contact %}
      <address class="contact-executive" itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
        {% if resume.contact.location %}
          <span itemprop="addressLocality">{{ resume.contact.location }}</span>
        {% endif %}
        
        {% if resume.contact.email %}
          {% if resume.contact.location %} | {% endif %}
          <a href="mailto:{{ resume.contact.email }}" itemprop="email">{{ resume.contact.email }}</a>
        {% endif %}
        
        {% if resume.contact.phone %}
          {% if resume.contact.email or resume.contact.location %} | {% endif %}
          <a href="tel:{{ resume.contact.phone }}" itemprop="telephone">{{ resume.contact.phone }}</a>
        {% endif %}
        
        {% if resume.contact.links %}
          {% for link in resume.contact.links %}
            | <a href="{{ link.url }}" itemprop="url" target="_blank" rel="noopener">{{ link.label }}</a>
          {% endfor %}
        {% endif %}
      </address>
      {% endif %}
    </header>

    <main role="main" class="executive-content">
      {% if use_fallback %}
      <section class="executive-fallback avoid-break">
        <h2 class="section-title">EXECUTIVE BACKGROUND</h2>
        <div class="fallback-exec">
          {% if raw_lines %}
            {% for line in raw_lines %}
              {% if line.strip() %}
              <p>{{ line }}</p>
              {% endif %}
            {% endfor %}
          {% else %}
            <p>No resume content available.</p>
          {% endif %}
        </div>
      </section>
      {% endif %}

      {% if resume.summary %}
      <section class="executive-summary avoid-break" itemprop="description">
        <h2 class="section-title">EXECUTIVE SUMMARY</h2>
        <div class="summary-exec">{{ resume.summary }}</div>
      </section>
      {% endif %}

      {% if resume.experience and resume.experience|length > 0 %}
      <section class="executive-experience">
        <h2 class="section-title">EXECUTIVE EXPERIENCE</h2>
        {% for role in resume.experience %}
          <article class="executive-role avoid-break" itemprop="worksFor" itemscope itemtype="http://schema.org/Organization">
            <div class="role-header">
              <div class="title-company">
                {% if role.title %}
                <h3 class="exec-title" itemprop="jobTitle">{{ role.title }}</h3>
                {% endif %}
                
                {% if role.company %}
                <div class="exec-company" itemprop="name">{{ role.company }}</div>
                {% endif %}
              </div>
              
              <time class="exec-dates">
                {% if role.start %}{{ role.start }}{% endif %}
                {% if role.start and (role.end or role.end != role.start) %} – {% endif %}
                {% if role.end %}{{ role.end }}{% else %}Present{% endif %}
              </time>
            </div>
            
            {% if role.location %}
            <div class="exec-location" itemprop="address">{{ role.location }}</div>
            {% endif %}
            
            {% if role.bullets and role.bullets|length > 0 %}
            <div class="achievements-exec" role="list">
              {% for bullet in role.bullets %}
                {% if bullet.strip() %}
                <div class="achievement-item">{{ bullet }}</div>
                {% endif %}
              {% endfor %}
            </div>
            {% endif %}
          </article>
        {% endfor %}
      </section>
      {% endif %}

      {% if resume.projects and resume.projects|length > 0 %}
      <section class="executive-projects">
        <h2 class="section-title">KEY INITIATIVES & PROJECTS</h2>
        {% for project in resume.projects %}
          <article class="project-exec avoid-break" itemprop="workExample" itemscope itemtype="http://schema.org/CreativeWork">
            {% if project.name %}
            <h3 class="project-title-exec" itemprop="name">{{ project.name }}</h3>
            {% endif %}
            
            {% if project.description %}
            <div class="project-desc-exec" itemprop="description">{{ project.description }}</div>
            {% endif %}
            
            {% if project.bullets and project.bullets|length > 0 %}
            <div class="project-achievements-exec" role="list">
              {% for bullet in project.bullets %}
                {% if bullet.strip() %}
                <div class="project-achievement-item">{{ bullet }}</div>
                {% endif %}
              {% endfor %}
            </div>
            {% endif %}
          </article>
        {% endfor %}
      </section>
      {% endif %}

      <!-- Bottom section - compact for executives -->
      <div class="executive-bottom">
        {% if resume.education and resume.education|length > 0 %}
        <section class="education-exec">
          <h2 class="section-title">EDUCATION & CREDENTIALS</h2>
          {% for education in resume.education %}
            <article class="education-exec-item" itemprop="alumniOf" itemscope itemtype="http://schema.org/EducationalOrganization">
              {% if education.degree %}
              <strong itemprop="hasCredential">{{ education.degree }}</strong>
              {% endif %}
              
              {% if education.school %}
              — <span itemprop="name">{{ education.school }}</span>
              {% endif %}
              
              {% if education.end %}
              (<time datetime="{{ education.end }}">{{ education.end }}</time>)
              {% endif %}
            </article>
          {% endfor %}
        </section>
        {% endif %}

        {% if resume.skills and resume.skills|length > 0 %}
        <section class="competencies-exec">
          <h2 class="section-title">CORE COMPETENCIES</h2>
          <div class="competencies-list" itemprop="knowsAbout">
            {% for skill in resume.skills %}
              {% if skill.name and skill.name.strip() %}
                {{ skill.name }}{% if not loop.last %} • {% endif %}
              {% endif %}
            {% endfor %}
          </div>
        </section>
        {% endif %}
      </div>
    </main>
  </div>

  <!-- Structured data for better parsing -->
  <script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "Person",
    {% if display_name or resume.name %}"name": "{{ display_name or resume.name }}",{% endif %}
    {% if resume.headline %}"jobTitle": "{{ resume.headline }}",{% endif %}
    {% if resume.contact.email %}"email": "{{ resume.contact.email }}",{% endif %}
    {% if resume.contact.phone %}"telephone": "{{ resume.contact.phone }}",{% endif %}
    {% if resume.contact.location %}"address": "{{ resume.contact.location }}",{% endif %}
    {% if resume.summary %}"description": "{{ resume.summary|replace('"', '\\"') }}",{% endif %}
    "url": [
      {% if resume.contact.links %}
        {% for link in resume.contact.links %}
          "{{ link.url }}"{% if not loop.last %},{% endif %}
        {% endfor %}
      {% endif %}
    ]
  }
  </script>
</body>
</html>





