# AI Resume Tailoring App - Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
HOST=0.0.0.0
PORT=8000

# Environment
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Optional: Database URL (if you add database later)
# DATABASE_URL=sqlite:///./app.db

# Optional: Redis URL (for production batch job storage)
# REDIS_URL=redis://localhost:6379

# Optional: Logging Level
LOG_LEVEL=INFO

# Security (for production)
# SECRET_KEY=your_secret_key_here_for_production

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID_PRO_MONTHLY=price_your_pro_monthly_price_id_here
